---
type Props = {
	data: {
		bg: string;
		color: string;
		img: string;
		title: string;
		description: string;
		buttonText: string;
		link: string;
		btnBg: string;
	};
};

const { data } = Astro.props;
const bg = data.bg;
const color = data.color;
const btnBg = data.btnBg;
---

<article>
	<img src={data.img} alt={`image of ${data.title}`} />
	<h2>{data.title}</h2>
	<p>{data.description}</p>
	<a href={data.link}>{data.buttonText}</a>
</article>

<style define:vars={{ bg, color, btnBg }}>
	article {
		background-color: var(--bg);
		color: var(--color);
		max-width: 18rem;
		height: auto;
		aspect-ratio: 1 / 1.1;
		padding: 1rem;
		border-radius: 0.8rem;
		box-shadow: inset 1px 1px 3px 0 rgba(70, 70, 70, 0.1);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.2rem;
		justify-content: center;
		h2 {
			font-size: 1.4rem;
			font-weight: 600;
		}
		p {
			font-size: 0.7rem;
			text-align: center;
			font-weight: 500;
			padding: 0.3rem 0;
			line-height: 1.6;
		}
		a {
			display: inline-block;
			width: max-content;
			text-align: center;
			background: var(--btnBg);
			color: rgba(255, 255, 255, 0.904);
			padding: 0.3rem 1.4rem;
			border-radius: 10rem;
			box-shadow: 2px 2px 3px 0 rgba(0, 0, 0, 0.3);
		}
	}
</style>
